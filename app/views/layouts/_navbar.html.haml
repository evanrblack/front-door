%nav.navbar.navbar-default
  .container
    .navbar-header
      = button_tag class: 'navbar-toggle collapsed',
                   data: { toggle: 'collapse', target: '#navbar' },
                   aria: { expanded: false, controls: 'navbar' } do
        %span.sr-only Toggle navigation
        - 3.times do
          %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        %span.fa.fa-home
        Front Door
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if login_signed_in?
          %li= link_to 'Dashboard', root_path
          %li= link_to 'Log out', destroy_login_session_path, method: :delete
        - else
          %li= link_to 'Home', root_path
          %li= link_to 'Log in', new_login_session_path
          %li= link_to 'Sign up', '#', style: 'color: orange;'
