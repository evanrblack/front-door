- page_title 'Sign up'
#content.container
  %h1.text-center Sign up
  %h2.text-center Account
  = simple_form_for @client do |f|
    .row
      .col-md-4.col-md-offset-2
        .panel.panel-primary
          .panel-heading
            %span.panel-title Login info
          .panel-body
            = f.fields_for :login do |ff|
              = ff.input :email
              = ff.input :password
              = ff.input :password_confirmation
      .col-md-4
        .panel.panel-primary
          .panel-heading
            %span.panel-title Personal info
          .panel-body
            = f.input :first_name
            = f.input :last_name
            = f.input :phone_number
    %h2.text-center Property
    = f.fields_for :listings do |ff|
      = render partial: 'listings/fields', locals: { form: ff }
    .text-center= f.button :submit, 'Sign up', class: 'btn-primary btn-lg'
